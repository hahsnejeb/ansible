#!/bin/bash

SESSION=tmux-aat1-solr

tmux new-session -d -s $SESSION

tmux split-window -h
tmux select-pane -t 0
tmux send-keys "ssh -i ~/.ssh/vm-solr-search1.pem ubuntu@10.34.126.141" C-m
tmux select-pane -t 1
tmux send-keys "ssh -i ~/.ssh/vm-solr-search2.pem ubuntu@10.34.127.137" C-m

# Attach to session
tmux attach-session -t $SESSION
