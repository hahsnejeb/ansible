#!/bin/bash

env=$1

app1=$(aws ec2 describe-instances --filter "Name=tag:Name,Values=app-1.${env}.wx.wickestest03.aws.travisperkins.cloud" | jq -r '.Reservations[].Instances[].PrivateIpAddress')
app2=$(aws ec2 describe-instances --filter "Name=tag:Name,Values=app-2.${env}.wx.wickestest03.aws.travisperkins.cloud" | jq -r '.Reservations[].Instances[].PrivateIpAddress')

SESSION=tmux-${env}-app

tmux new-session -d -s $SESSION

tmux split-window -h
tmux select-pane -t 0
tmux send-keys "ssh -i ~/.ssh/wickestest03.pem ubuntu@${app1}" C-m
tmux select-pane -t 1
tmux send-keys "ssh -i ~/.ssh/wickestest03.pem ubuntu@${app2}" C-m

# Attach to session
tmux attach-session -t $SESSION




#tmux send-keys "ssh -i ~/.ssh/wickestest03.pem ubuntu@10.34.120.253" C-m
