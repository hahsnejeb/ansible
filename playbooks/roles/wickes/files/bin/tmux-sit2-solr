#!/bin/bash

SESSION=tmux-sit2-solr

tmux new-session -d -s $SESSION

tmux split-window -h
tmux select-pane -t 0
tmux send-keys "ssh -i ~/.ssh/vm-solr-search1.pem ubuntu@10.34.127.108" C-m
tmux select-pane -t 1
tmux send-keys "ssh -i ~/.ssh/vm-solr-search2.pem ubuntu@10.34.127.194" C-m
tmux split-window -v
tmux send-keys "ssh -i ~/.ssh/vm-solr-search3.pem ubuntu@" C-m


# Attach to session
tmux attach-session -t $SESSION
